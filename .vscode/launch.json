  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for XDebug",
      "type": "php",
      "request": "launch",
      "port": 3000,
      "localSourceRoot": "http://127.0.0.1/develop/",
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "stopOnEntry": true,
      "cwd": "${fileDirname}",
      "port": 3000,
      "runtimeExecutable": "C:\\xampp\\php\\php.exe"
    }
  ]
}
